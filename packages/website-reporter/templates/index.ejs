<!DOCTYPE html>
<html>
    <head>
        <title>Vrt.js Report</title>
        <style>
            .report-item {
                margin-bottom: 2rem;
            }

            .screenshots {
                display: flex;
            }

            .screenshot {
                width: calc(100% / 3);
            }

            .key {
                font-size: 2rem;
            }
        </style>
    </head>
    <body>
        <h1>Failed</h1>

        <% for(const reportItem of failedItems) { %>
            <%- include('reportItem', {reportItem: reportItem}); %>
        <% } %>

        <h1>Successful</h1>

        <% for(const reportItem of successfulItems) { %>
            <%- include('reportItem', {reportItem: reportItem}); %>
        <% } %>
    </body>
</html>