<!DOCTYPE html>
<html>
    <head>
        <title>Vrt.js Report</title>
        <style>
            .screenshots {
                display: flex;
            }

            .screenshot {
                width: calc(100% / 3);
            }
        </style>
    </head>
    <body>
        <% for(const screenshot of screenshots) { %>
            <details>
                <summary><%= JSON.stringify(screenshot.key) %></summary>
                <div class="screenshots">
                    <div class="screenshot">
                        <h2>Before</h2>
                        <a href="<%= screenshot.before %>"><img src="<%= screenshot.before %>"></a>
                    </div>
                    <div class="screenshot">
                        <h2>Diff</h2>
                        <a href="<%= screenshot.diff %>"><img src="<%= screenshot.diff %>"></a>
                    </div>
                    <div class="screenshot">
                        <h2>After</h2>
                        <a href="<%= screenshot.after %>"><img src="<%= screenshot.after %>"></a>
                    </div>
                </div>
            </details>
        <% } %>
    </body>
</html>