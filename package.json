{
  "private": true,
  "description": "A highly modular visual regression testing library",
  "main": "dist/index.js",
  "author": "Cameron Martin <cameronmartin123@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:cameron-martin/vrt.js.git",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm-run-all test:*",
    "test:unit": "jest",
    "test:prettier": "prettier --check '**/*.{js,ts}'",
    "format": "prettier --write '**/*.{js,ts}'",
    "build": "tsc --build packages/*",
    "cli": "vrt.js -r ts-node/register"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^24.0.17",
    "@types/jest-image-snapshot": "^2.8.0",
    "express": "^4.17.1",
    "jest": "^24.8.0",
    "jest-image-snapshot": "^2.9.0",
    "lerna": "^3.16.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "tempy": "^0.3.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
